<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/card_view"
    android:layout_margin="12dp"
    card_view:cardBackgroundColor="@color/md_theme_inversePrimary"
    card_view:cardCornerRadius="20dp"
    card_view:cardElevation="10dp"
    card_view:contentPadding="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:id="@+id/item_image"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="16dp"
            android:background="@drawable/rounded_image_background"
            android:scaleType="centerCrop"
            android:clipToOutline="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/titulo_bar"
            android:textColor="@color/md_theme_primary_mediumContrast"
            android:id="@+id/item_title"
            android:fontFamily="@font/garamond_regular"
            android:textStyle="bold"
            android:layout_toEndOf="@+id/item_image"
            android:layout_alignParentTop="true"
            android:textSize="20sp"
            />

        <LinearLayout
            android:id="@+id/item_stars"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/item_image"
            android:layout_below="@id/item_title"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">


            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="5dp"
                android:src="@drawable/star_icon" />
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="5dp"
                android:src="@drawable/star_icon" />
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="5dp"
                android:src="@drawable/star_icon" />
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="5dp"
                android:src="@drawable/star_icon" />
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/star_icon" />

        </LinearLayout>

    </RelativeLayout>


</androidx.cardview.widget.CardView>
